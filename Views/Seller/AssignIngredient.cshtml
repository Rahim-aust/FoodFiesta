@model IEnumerable<FoodFiesta.Models.Ingredient>

@{
    ViewBag.Title = "AssignIngredient";
}

<div class="row mx-5 text-center">
    <p></p>
    <p></p>
    <h4>For <b style="color:blue">@ViewBag.newFoodName</b> add ingredients from the list</h4>
    <hr />
    <p></p>
    <p></p>
    <h2>Ingredient List</h2>
    <p></p>
    <p></p>

    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Quantity
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit_type)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <input type="number" id="inputQtyForIngredient" name="inputQtyForIngredient" value="1">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit_type)
                </td>
                <td>
                    @Html.ActionLink("Add", "Assign", new { ingredient_id = item.Id }, htmlAttributes: new { @class = "btn btn-info" })
                </td>
            </tr>
        }

    </table>
</div>

<div class="row mx-5 text-center">
    <p></p>
    <p></p>
    @Html.ActionLink("Back to home", "Index")
    <p></p>
    <p></p>
</div>

