@model IEnumerable<FoodFiesta.Models.FoodElement>

@{
    ViewBag.Title = "FoodElements";
}


<div class="row mx-5 text-center">
    <p></p>
    <p></p>
    <h4>For <b style="color:blue">@ViewBag.newFoodName</b> ingredients are listed below</h4>
    <hr />
    <p></p>
    <a class="btn btn-info" href="/Seller/AssignIngredient">Add aother ingredient for this food</a>
    <p></p>
    <h2>Food element list for @ViewBag.newFoodName</h2>
    <p></p>
    <p></p>

    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient1.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient1.Unit_type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredient1.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ingredient1.Unit_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>
        }

    </table>
</div>

<div class="row mx-5 text-center">
    <p></p>
    <p></p>
    @Html.ActionLink("Back to home", "Index")
    <p></p>
    <p></p>
</div>

