@model IEnumerable<FoodFiesta.Models.Branch>

@{
    ViewBag.Title = "AssignBranch";
}


<div class="row mx-5 text-center">
    <p></p>
    <p></p>
    <h4>For seller <b style="color:blue">@ViewBag.newSellerEmail</b> select a branch</h4>
    <hr />
    <p></p>
    <h2>All Branch List</h2>
    <p></p>
    <p></p>

    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.ActionLink("Select Branch", "Assign", new { branch_id = item.Id }, htmlAttributes: new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </table>
</div>

<div class="row mx-5 text-center">
    <p></p>
    <p></p>
    @Html.ActionLink("Back to home", "Index")
    <p></p>
    <p></p>
</div>


@Scripts.Render("~/bundles/jquery")
<script>

    //show dropdown values in text box
    $(function () {
        $("#assignedBranch").change(function () {
            var selectedBranch = $("#assignedBranch option:selected").text();
            $("#inputAssignedBranch").val(selectedBranch);
        })
    })

</script>
