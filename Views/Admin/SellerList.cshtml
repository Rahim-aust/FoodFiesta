@model IEnumerable<FoodFiesta.Models.Seller>

@{
    ViewBag.Title = "SellerList";
}

<div class="row mx-5 text-center">
    <p></p>
    <p></p>
    <h2>Seller List</h2>
    <p></p>
    <p></p>

    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch1.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.User.Type == 2)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Branch1.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                   
                </tr>
            }
            else
                {
                    <tr>
                         <td>
                        @Html.DisplayFor(modelItem => item.User.Email)
                    </td>
                    </tr>
                }
        }

    </table>
</div>

<div class="row mx-5 text-center">
    <p></p>
    <p></p>
    @Html.ActionLink("Back to home", "Index")
    <p></p>
    <p></p>
</div>

